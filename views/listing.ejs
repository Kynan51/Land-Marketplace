<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Land Details</title>
    <link rel="stylesheet" href="index.css">
</head>
<body>
    <%- include ("_header.ejs") %>
    <main>
        
        <section class="land-info">
            <div id="property-list" class="property-list">
                <% listing.forEach(property_card=>{  %>
                    <div class="property_image">
                        <img src="<%= property_card.image_url %>" alt="Property Image">
                    </div>
                    <div class="property-card"></div>
                        <a href="/listing?place=<%= property_card.location %>">
                            <h3><%= property_card.location %></h3>
                        </a>
                        <p>Size: <%= property_card.size_acres %></p>
                        <p>Price: <%= property_card.price %></p>
                        <p>Status: <%= property_card.for_sale == 0?"sold":"for sale" %></p>
                        <p>Agent's Name: <%= property_card.full_name %> </p> 
                        <p>Agent's No: <%= property_card.phone_number %></p>
                    </div>
                <% }) %>
        </section>  
        <style>
            .land_info{
                height: max-content;
                width: 100%;
            }
            .property_list{
                width: 80%;
                border-radius: 15px;
                background-color: rgba(127, 255, 212, 0.525);
                display: flex;
                align-items: center;
                flex-direction: row;
               
            }
            .property_image{
                width: 60%;
                height: 350px;
            }
            
        </style>

    </main>
    <%- include ("_footer.ejs") %>
</body>
</html>