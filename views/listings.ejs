<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listings</title>
    <link rel="stylesheet" href="index.css">
</head>
<body>
    <%- include ("_header.ejs") %>
    <main>
        <section id="listings">
            <div class="listings-header">
                <h2>Available Properties</h2>
                <form id="search-form">
                    <input type="search" id="search-input" placeholder="Search properties...">
                    <button type="submit">Search</button>
                </form>
            </div>
            <div id="property-list" class="property-list">
                <% listings.forEach(property_card=>{  %>
                    <div class="property-card">
                        <img src="<%= property_card.image_url %>" alt="Property Image">
                        <a href="/listing?place=<%= property_card.location %>">
                            <h3><%= property_card.location %></h3>
                        </a>
                        <p>Size: <%= property_card.size_acres %></p>
                        <p>Price: <%= property_card.price %></p>
                        <p>Status: <%= property_card.for_sale == 0?"sold":"for sale" %></p>
                        <!-- <p>Agent's Name: <%= property_card.full_name %> </p> 
                        <p>Agent's No: <%= property_card.phone_number %></p>-->
                    </div>
                <% }) %>
                <br>
                <br>
                <br>
                <section class="add-new-land">
                    <form action="/newland" method="post" enctype="multipart/form-data">

                        <label for="id">ID Number</label>
                        <input type="number" name="id" id="id">
                        <br>
                        <label for="fullname">Full Name</label>
                        <input type="text" name="fullname" id="fullname">
                        <br>
                        <label for="phone">Phone</label>
                        <input type="tel" name="phone" id="phone">
                        <br>
                        <label for="email">Email</label>
                        <input type="email" name="email" id="email">
                        <br>
                        <label for="address">Address</label>
                        <input type="text" name="address" id="address">
                        <br>
                        <br>
                        <label for="location">Location</label>
                        <input type="text" name="location" id="location">
                        <br>
                        <br>
                        <label for="county">County</label>
                        <input type="text" name="county" id="county">
                        <br>
                        <label for="picture">Picture</label>
                        <input type="file" name="picture" id="picture">
                        <br>

                    </form>
                </section>
                
            </div>
        </section>

    </main>
    
    <%- include ("_footer.ejs") %>
</body>
</html>